#!/bin/bash
set -e

SOURCES_DIR=/tmp/artifacts
PROCESS_MIGRATION_DIR=/opt/${JBOSS_PRODUCT}

unzip -j ${SOURCES_DIR}/${ADD_ONS_DISTRIBUTION_ZIP} "${KIE_PROCESS_MIGRATION_DISTRIBUTION_ZIP}" -d ${SOURCES_DIR}
unzip -q ${SOURCES_DIR}/${KIE_PROCESS_MIGRATION_DISTRIBUTION_ZIP} -d ${PROCESS_MIGRATION_DIR}/

mv ${PROCESS_MIGRATION_DIR}/process-migration/* ${PROCESS_MIGRATION_DIR}/
rmdir ${PROCESS_MIGRATION_DIR}/process-migration/

chown -R jboss:root ${PROCESS_MIGRATION_DIR}
chmod -R ug+x ${PROCESS_MIGRATION_DIR}

